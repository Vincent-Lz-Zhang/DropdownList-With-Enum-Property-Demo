@using DropdownlistWithEnum.Models
@model MusicProfileViewModel

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.MusicGenre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                <select class="my-dropdownlist" id="MusicGenre" name="MusicGenre">

                    <option value="">Select Data Type</option>
                    <option value="1">Nujabes Chillhop</option>
                    <option value="2">New Age</option>
                    <option value="3">Post Rock</option>
                    <option value="4">Sound Track</option>

                </select>


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>